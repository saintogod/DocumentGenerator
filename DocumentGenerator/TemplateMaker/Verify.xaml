<Window x:Class="TemplateMaker.Verify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verify" Height="350" Width="250" WindowStyle="None" ShowInTaskbar="False" MinHeight="350" MinWidth="250">
    <Window.Resources>
        
        <Style x:Key="baseItem" TargetType="TreeViewItem">
            <Setter Property="Margin" Value="0,1,0,1" />
        </Style>

        <Style x:Key="existField" TargetType="TreeViewItem" BasedOn="{StaticResource baseItem}">
            <Setter Property="Background" Value="Green"/>
        </Style>
        <Style x:Key="nonExistField" TargetType="TreeViewItem" BasedOn="{StaticResource baseItem}">
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Window.Resources>
    <Grid >
        <Label Content="Compare Result" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
        <TreeView x:Name="tv_verifyResult" BorderThickness="0" Margin="0,25" />
        <Button Content="Close" Name="btn_close" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="6" Click="btn_close_Click"/>
    </Grid>

</Window>
