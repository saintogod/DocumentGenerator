<Window x:Class="DocumentGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="700">
    <DockPanel LastChildFill="True">
        <Menu x:Name="menu" Height="23" DockPanel.Dock="Top" VerticalContentAlignment="Center">
            <MenuItem Header="_File" Height="23"></MenuItem>
            <MenuItem Header="About" Height="23"></MenuItem>
        </Menu>
        <ToolBarTray x:Name="toolbartray" DockPanel.Dock="Top" Height="23" >
            <ToolBar Height="23" Header="Copy"></ToolBar>
            <ToolBar Header="Modify"></ToolBar>
        </ToolBarTray>
        <StatusBar x:Name="statusbar" DockPanel.Dock="Bottom" Height="23" VerticalContentAlignment="Center"/>
        <Grid x:Name="contentgrid">

        </Grid>
    </DockPanel>
</Window>
